<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lolly_pastel_sky_blue_dark" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/lolly_disabled_bg" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lolly_pastel_sky_blue" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>
