<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoTranscoder.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lolly_primary</item>
        <item name="colorPrimaryVariant">@color/lolly_primary_variant</item>
        <item name="colorOnPrimary">@color/lolly_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lolly_secondary</item>
        <item name="colorSecondaryVariant">@color/lolly_secondary_variant</item>
        <item name="colorOnSecondary">@color/lolly_on_secondary</item>
        <!-- Background, Surface, Error colors -->
        <item name="android:colorBackground">@color/lolly_background</item>
        <item name="colorOnBackground">@color/lolly_on_background</item>
        <item name="colorSurface">@color/lolly_surface</item>
        <item name="colorOnSurface">@color/lolly_on_surface</item>
        <item name="colorError">@color/lolly_error</item>
        <item name="colorOnError">@color/lolly_on_error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Lolly.Button</item>
    </style>

    <!-- Bubbly Button Style -->
    <style name="Lolly.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/lolly_button_default_background</item>
        <item name="android:textColor">@color/lolly_button_default_text</item>
        <item name="cornerRadius">24dp</item> <!-- Example for bubbly corners -->
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">56dp</item>
        <!-- Add elevation or shadow for a more "lollipop" feel if desired -->
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <!-- Keep the old theme for reference or remove if not needed -->
    <style name="Theme.VideoTranscoder" parent="android:Theme.DeviceDefault.Light.NoActionBar">
    </style>
</resources>
